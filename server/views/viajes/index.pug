extends ../layout/index
block content
    main.container.mt-5
        h1.text-center.mb-5 #{page}
        .row.proximos-viajes
            each trip in trips
                .col-md-6.col-lg-4.mb-4
                    .card
                        img(src=`img/destinos_${trip.image}.jpg`, class="img-fluid")
                        .card-body
                            h2=trip.title